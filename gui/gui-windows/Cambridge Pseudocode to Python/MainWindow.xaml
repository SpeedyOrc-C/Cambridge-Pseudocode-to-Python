<Window x:Class="Cambridge_Pseudocode_to_Python.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cambridge_Pseudocode_to_Python"
        mc:Ignorable="d"
        Title="Cambridge Pseudocode to Python" Height="250" Width="400">
    <Grid>
        <Label x:Name="Title" Content="program-title" Margin="10,10,10,0" VerticalAlignment="Top" FontSize="20" HorizontalAlignment="Center"/>
        <Button x:Name="Button_ChoosePseudocodeFile" Content="choose-pseudocode-file" HorizontalAlignment="Center" Height="36" Margin="0,85,0,0" VerticalAlignment="Top" Width="180" Click="Button_ChoosePseudocodeFile_Click"/>
        <Button x:Name="Button_Translate" Content="translate" HorizontalAlignment="Center" Height="36" Margin="0,140,0,0" VerticalAlignment="Top" Width="100" Click="Button_Translate_Click"/>

    </Grid>
</Window>
